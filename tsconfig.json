{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["ES6"],
    "declaration": true,
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./lib/",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowUnreachableCode": true,
    "allowJs": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
